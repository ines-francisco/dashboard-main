covid_inc <- covid_inc %>%
rename(concelho=NAME_2)
reactable(covid_inc,
defaultSorted = list(Incidencia = "desc"),
searchable = TRUE,
columns = list(
Incidencia = colDef(
style = function(value) {
if (value >= 120) {
color <- "#e00000"
} else if (value < 120) {
color <- "#008000"
} else {
color <- "#777"
}
list(color = color, fontWeight = "bold")
}
)
))
